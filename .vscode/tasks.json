{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsbuild",
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "tsc -watch -p ./"
        },
        {
            "label": "browserify",
            "type": "shell",
            "command": "browserify -p tsify --debug src/lobby.ts -o public/bundle.js",
            // "dependsOn": [
            //     "tsbuild"
            // ]
        },
        {
            "label": "browserifyTest",
            "type": "shell",
            "command": "browserify -p tsify --debug src/test.ts -o public/testbundle.js",
            // "dependsOn": [
            //     "tsbuild"
            // ]
        }
    ]
}